<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1><br />
		<i><%= place.address %></i><br /><br />
		<p><%= place.description %></p><br />

		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>
		<br /><br />

	<% if place.photos.present? %>
		    <%= image_tag place.photos.last.picture, :class => 'img-thumbnail center-block' %>
          <div class="photo-caption">
            <p><small><%= place.photos.last.caption %></small></p>
          </div>
	<% end %>

	<% if place.comments.present? %>
		<div class="col-xs-12">
		    <blockquote>
		      <% if place.last_comment.humanized_rating.present? %>
		        <b><%= place.last_comment.humanized_rating %></b> -
		      <% end %>
		        <%= place.last_comment.message %>
		        <small><%= place.last_comment.user.email %></small>
		    </blockquote>
	  	</div>
	  <% end %>
	</div>
<% end %>

<br />
<br />

<div class="pagination col-xs-10 col-xs-offset-1 text-center">
	<%= paginate @places %>
</div>